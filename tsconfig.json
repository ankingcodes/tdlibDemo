{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "module": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "esnext",
      "webworker",
      "scripthost",
      "dom"
    ]
  },
  "include": [
    "."
  ]
}
